{
    "name": "myvendor/myproject",
    "description": "A CodeIgniter project for managing users, suppliers, employees, payments, teachers, and classes.",
    "type": "project",
    "require": {
        "codeigniter4/framework": "^4.0",
        "php": "^7.2 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "CodeIgniter\\CodeIgniter::setBasePath"
        ]
    }
}